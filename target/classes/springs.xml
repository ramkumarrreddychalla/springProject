<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   
	<bean class="com.spring.hellowWorld2_XmlBased.Hello" id="ref_hello" scope="singleton" 
		init-method="init" destroy-method="destroyer">
		<property name="name" value="Google"></property>
	</bean>
	
	<bean  class="com.spring.hellowWorld2_XmlBased.ConstructorInjectionClass"  id="ref_inject">
		<constructor-arg value="Miami"></constructor-arg> 
	</bean>
</beans> 